@model School.Financial.Models.SchoolData

@{
    ViewData["Title"] = "เพิ่มโรงเรียน";

    var educationAreas = ViewBag.educationAreas as IEnumerable<EducationArea>;
}

<h1>เพิ่ม</h1>

<h4>โรงเรียน</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationAreaId" class="control-label"></label>
                <select asp-for="EducationAreaId" asp-items="@(new SelectList(educationAreas,"Id","Name"))" class="form-control" required>
                    <option value="">เลือก ...</option>
                </select>
                <span asp-validation-for="EducationAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="สร้าง" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">กลับ</a>
</div>
