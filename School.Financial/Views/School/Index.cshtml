@model IEnumerable<School.Financial.Models.SchoolData>

@{
    ViewData["Title"] = "โรงเรียน";

    var educationAreas = ViewBag.educationAreas as IEnumerable<EducationArea>;
}

<h1>โรงเรียน</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> เพิ่มโรงเรียน</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.sc_name)</th>
            <th>@Html.DisplayNameFor(model => model.areacode)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.sc_name</td>
                <td>@educationAreas.FirstOrDefault(x => x.sao_id == item.areacode)?.sao_name</td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.sc_id" class="text-success"><span class="glyphicon glyphicon-edit"></span></a>
                    <a asp-action="Details" asp-route-id="@item.sc_id"><span class="glyphicon glyphicon-search"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.sc_id" class="text-danger"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
