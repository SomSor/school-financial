@model School.Financial.Models.Transaction

@{
    ViewData["Title"] = "ยืนยันการลบบันทึกรายการ";

    var budget = ViewBag.budget as Budget;
    var partner = ViewBag.partner as Partner;
}

<h1>ลบ</h1>

<h3>ยืนยันการลบ?</h3>
<div>
    <h4>บันทึกรายการ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BudgetId)
        </dt>
        <dd class="col-sm-10">
            @budget.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class="col-sm-10 showdate">
            @Html.DisplayFor(model => model.IssueDateString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuplicatePaymentType)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PaymentType == PaymentType.DuplicatePayment || Model.PaymentType == PaymentType.Debtor)
            {
                @($"{Model.DuplicatePaymentType}{Model.DuplicatePaymentNumber}/{Model.DuplicatePaymentYear}");
            }
            else
            {
                @($"{Model.DuplicatePaymentType}{Model.DuplicatePaymentNumber}");
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remark)
        </dd>
        @if (Model.IsPayment)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PartnerId)
            </dt>
            <dd class="col-sm-10">
                @partner?.Name
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VatInclude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VatIncludeString)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10 showdatetime">
            @Html.DisplayFor(model => model.CreatedDateString)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="ลบ" class="btn btn-danger" /> |
        <a asp-action="Index">กลับ</a>
    </form>
</div>
